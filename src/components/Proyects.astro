---
import ReactIcon from './icons/ReactIcon.astro'
import TailwindIcon from './icons/TailwindIcon.astro'
const TAGS = {
    REACT:{
        name: 'React.js',
        class: 'bg-blue-500 text-white',
        icon: ReactIcon,
    },
    TAILWIND: {
        name: 'Tailwind CSS',
        class: 'bg-white text-[#73bcf6]',
        icon: TailwindIcon,

        
}
}


const PROJECTS = [
    {
        title: 'Proyecto Buscador de Cryptomonedas',
        description: 'app desarrollada para poner en practica el consumo de API y la muestra de Datos',
        link: 'https://crypto-tracking-d1kqyhxne-ignajos-projects.vercel.app/',
        github:'#',
        image: '/projects/crypto.webp',
        tags: [TAGS.REACT,TAGS.TAILWIND]


    }
]
---

{
    PROJECTS.map(({image, title, description, tags}) => (
    <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs  ${tag.class} py-2 px-1`}>
                        <tag.icon class="size-4"/>
                        {tag.name}
                        </span>
                    </li>
               ))}
            </ul>
            <img
            class="rounded shadow-2xl shadow-white/10"
            src={image} alt="captura del proyecto de"/>
        </article>
    ))
}